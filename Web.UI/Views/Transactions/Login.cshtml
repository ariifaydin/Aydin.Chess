@model Web.UI.Models.LoginModel

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal container">
        <h4>LOGİN</h4>
        <hr />
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(login => login.Username, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(login => login.Username, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(login => login.Username, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(login => login.Password, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(login => login.Password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(login => login.Password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="GİRİS" class="btn btn-default btn-primary" />
            </div>
        </div>
    </div>
}

